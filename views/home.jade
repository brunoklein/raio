doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(src='/js/jquery-3.3.1.min.js')
    link(rel='stylesheet', href='/libs/bootstrap-4.1.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='/css/home.css')
    script(src='/libs/bootstrap-4.1.0/js/bootstrap.min.js')
    script(src='/js/home.js')
    title raio key store
  body
  #container
    #menu-area.row.text-center
        div.col-33
          p raio key store
        div.col-33
          img#img-logo(src='/img/logo.png' alt='raio key store')
        div.col-33
          a(href='/dashboard') dashboard
    #search-area.row
        div.search-form.col
          input#search-bar.form-control.input-group-append(type='text', placeholder='your game here!' onkeyup='search()')
    #itens-area.row.text-center
        each item in itens
          div.itens-list.col-sm-4
            ul
              li
                img.img-item(src=item.image alt='raio key store')
              li
                a(href='#')= item.name
              li='$' + item.price
    #about-area.row.text-center
      div.col-33
        p raio key store
      div.col-33
        p unisinos
      div.col-33
        p by brunoklein    